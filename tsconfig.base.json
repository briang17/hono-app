{
    "compilerOptions": {
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx",
        "target": "es2022",
        "module": "esnext",
        "moduleResolution": "bundler",
        "baseUrl": ".",
        "paths": {
            "@packages/env": [
                "./packages/env/*"
            ],
            "@packages/database": [
                "./packages/database/*"
            ],
            "@packages/secrets": [
                "./packages/secrets/*"
            ],
            "@apps/api": [
                "./apps/api/*"
            ],
            "@apps/web": [
                "./apps/web/*"
            ]
        }
    }
}